<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.4.4.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="page">

        <div id="header">
            <div id="title">
                <h1>MarketPlace</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>

            <div id="menucontainer">

                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @if (Context.User.Identity.Name != null)
                    {
                    <li>@Html.ActionLink("View Products", "Products", "Products")</li>
                    if (Business.User.userIsSeller(Context.User.Identity.Name))
                    {
                        <li>@Html.ActionLink("Your Products", "SellerProduct", "Products")</li>
                    }
                    if (Business.User.userIsAdmin(Context.User.Identity.Name))
                    {
                        <li>@Html.ActionLink("Manage Roles", "Roles", "Account")</li>
                    }
                    }
                </ul>

            </div>
        </div>

        <div id="main">
            @RenderBody()
            <div id="footer">
            </div>
        </div>
    </div>
</body>
</html>
