@model IEnumerable<CommonLayer.Product>

@{
    ViewBag.Title = "Products";
}

<h2>View all Products</h2>


<table>
    <tr>
        <th></th>
        <th>
            Product Name
        </th>
        <th>
            Product Description
        </th>
        <th>
            Stock
        </th>
        <th>
            Price
        </th>
        <th>
            Seller
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Productid }) 
        </td>
        <td>
            @item.ProductName
        </td>
        <td>
            @item.ProductDescription
        </td>
        <td>
            @item.Stock
        </td>
        <td>
            @String.Format("{0:F}", item.Price)
        </td>
        <td>
            @item.User.Username
        </td>
    </tr>
}

</table>

